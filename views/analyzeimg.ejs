<style>
    /* Card container styles */
    .card-container {
        margin: 20px;
        padding: 15px;
        border-radius: 15px;
        background-color: #f8f9fa;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    /* Hover effect on card */
    .card-container:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
    }

    /* Container for Image and Suggestion, Flexbox to display them side by side */
    .co2-card-wrapper {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 20px;
    }

    /* Image styling */
    .co2-image {
        width: 100%;
        max-width: 450px;
        height: auto;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.5s ease;
    }

    /* Hover effect on image */
    .co2-image:hover {
        transform: scale(1.05);
    }

    /* Suggestion card styling */
    .result-card {
        background-color: #e1f5fe;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        width: 60%; /* Adjust width so it fits next to the image */
        opacity: 0;
        animation: fadeIn 1s forwards;
    }

    /* Fade-in animation */
    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    /* Style for the heading in the result card */
    .result-heading {
        font-size: 1.5rem;
        font-weight: 700;
        color: #0277bd;
        margin-bottom: 10px;
    }

    /* Style for the suggestion text */
    .result-suggestion {
        font-size: 1.2rem;
        color: #00796b;
        font-weight: 500;
        padding: 10px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
    }

    /* Hover effect on suggestion text */
    .result-suggestion:hover {
        transform: translateX(10px);
    }

    /* Responsive design for smaller screens */
    @media (max-width: 768px) {
        .co2-card-wrapper {
            flex-direction: column;
            align-items: center;
        }

        .result-card {
            width: 80%; /* Take up more space in smaller screens */
            margin-top: 20px;
        }

        .co2-image {
            max-width: 100%; /* Make the image responsive */
        }
    }
</style>

<!-- Card to Upload Image for CO2 Footprint Analysis -->
<div class="card card-container">
    <div class="card-header">
        <h4>Upload Image to Analyze CO2 Content</h4>
        <div class="co2-card-wrapper">
            <img src="https://i.ibb.co/bNjYGB0/cam.jpg" alt="CO2 Footprint" class="co2-image" />
            <div class="result-card">
                <h5 class="result-heading">CO2 Emission Descriptive Analysis</h5>
                <p id="suggestion" class="result-suggestion"><%= wasteType %></p>
            </div>
        </div>
    </div>
    <div class="card-body">
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#uploadModal">Upload Image</button>
    </div>
</div>

<!-- Modal for Uploading Proof -->
<div class="modal fade" id="uploadModal" tabindex="-1" aria-labelledby="uploadModalLabel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="uploadModalLabel">Upload Image</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h4 id="modal-category-title">Analyze the Image</h4>
                <!-- Form for uploading image -->
                <form id="uploadForm" action="/wasteDedect/waste" method="POST" enctype="multipart/form-data">
                    <input type="file" class="form-control mb-3" name="image" required>
                    <button type="submit" class="btn btn-primary">Upload</button>
                </form>
            </div>
        </div>
    </div>
</div>



<!-- Bootstrap JS and Popper.js -->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Latest Contests</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

  <style>
    body
  {
    font-family: 'Roboto', sans-serif;

  }
  .container {
  background-color: transparent !important; /* Ensures no background color */
  padding: 20px; /* Optional: Add padding for better content spacing */
  box-shadow: none; /* Remove any default shadow if applied */
}
    .contest-card { transition: transform 0.3s; }
    .contest-card:hover { transform: scale(1.03); }
    .nav-link.active { background-color: #28a745;  }
    .nav-tabs .nav-link {
        color: black !important; 
      }
      
      .nav-tabs .nav-link.active {
        color: rgb(255, 7, 28) !important;
      }
  </style>
</head>
<body>
  <div class="container my-5">

    <!-- Introduction Section -->
    <section class="mb-5">
      <h2 class="text-center mb-4">Welcome to Our Exciting Contests!</h2>
      <div class="row">
        <div class="col-md-6">
          <section class="intro-section mb-5">
            <h2 class="mb-3">Welcome to Our Exciting Contests on <span style="color: #ffd700;">TejasAI!</span></h2>
            <p class="lead">
              Dive into the world of <strong>TejasAI</strong> and unleash your potential! Our platform offers a diverse range of thrilling contests for every passionâ€”whether you're into <em>photography</em>, <em>coding challenges</em>, or <em>creative arts</em>.
            </p>
            
          </section>
        </div>
        <div class="col-md-6">
          <img src="public/Man.png" alt="Contest" class="img-fluid rounded">
        </div>
      </div>
    </section>

    <!-- Contest Section -->
    <section>
      <h3 class="text-center mb-4">Explore Contests</h3>
      
      
      <!-- Category Tabs -->
      <ul class="nav nav-tabs  mb-4 justify-content-center" id="contestTabs">
        <li class="nav-item">
          <a class="nav-link active" href="#" data-category="all"><i class="fa-solid fa-globe"></i>All</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#" data-category="live"><i class="fa-solid fa-bolt"></i>Live</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#" data-category="registered"><i class="fa-solid fa-user-check"></i>Registered</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#" data-category="upcoming"><i class="fa-solid fa-calendar-alt"></i>Upcoming</a>
        </li>
      </ul>

      <!-- Contest Cards -->
      <div class="row" id="contestCards">
        <% contests.forEach(contest => { %>
          <div class="col-md-4 contest-card" data-category="<%= contest.category %>">
            <div class="card mb-4 shadow-sm">
              <img src="<%= contest.img %>" class="card-img-top" alt="<%= contest.title %>">
              <div class="card-body">
                <h5 class="card-title"><%= contest.title %></h5>
                <p class="card-text"><%= contest.what_to_do %></p>
                <a href="/contest/<%= contest.id %>" class="btn btn-primary">View Details</a>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </section>
  </div>


  <!-- Bootstrap JS and Filtering Script -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const tabs = document.querySelectorAll("#contestTabs .nav-link");
      const cards = document.querySelectorAll(".contest-card");

      tabs.forEach(tab => {
        tab.addEventListener("click", (e) => {
          e.preventDefault();

          // Activate the clicked tab
          tabs.forEach(t => t.classList.remove("active"));
          tab.classList.add("active");

          // Get the selected category
          const category = tab.getAttribute("data-category");

          // Show/Hide cards based on category
          cards.forEach(card => {
            if (category === "all" || card.getAttribute("data-category") === category) {
              card.style.display = "block";
            } else {
              card.style.display = "none";
            }
          });
        });
      });
    });
  </script>



</body>
</html>
